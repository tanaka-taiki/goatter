<!DOCTYPE html>
<html>
<head>
  <title>Goatter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
     <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
</head>
<body>

  <nav class= "orange lighten-2" >
    <div class="nav-wrapper">
      <a href="/tweets" class="brand-logo center">Goatter</a>
      <div id="nav-mobile" class="right hide-on-med-and-down">
         <% if user_signed_in? %>
         <li class="user_nav no_li">
          <%= link_to "マイページ", "/users/:id" , class: "namespace"%>
           <%= link_to "投稿する", tweets_new_path , class: "namespace"%>
           <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "namespace" %>
          </li>
       <% else %>
        <li class="user_nav no_li">
          <%= link_to "ログイン", new_user_session_path, class: 'namespace' %>
          <%= link_to "新規登録", new_user_registration_path, class: "namespace" %>
        </li>
      <% end %>
      </div>
    </div>
  </nav>

  <script type="text/javascript" src="./app.js"></script>

<%= yield %>


</body>
</html>
